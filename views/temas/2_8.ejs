        <table class="table">
          <thead>
            <tr>
              <th>Pronombre</th>
              <th>Verbo</th>
              <th>Sufijo</th>
              <th>Significado</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Ni</td>
              <td>cochi</td>
              <td>z</td>
              <td>Yo dormiré</td>
            </tr>
            <tr>
